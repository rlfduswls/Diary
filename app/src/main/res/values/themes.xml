        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/yellow</item>
        <!-- Customize your theme here. -->
