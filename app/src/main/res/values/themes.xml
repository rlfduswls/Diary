    <!-- res/values/styles.xml -->
    <style name="CustomCalendarDayTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/calendar_day_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomCalendarWeekDayTextAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomCalendarYearTextAppearance" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">20sp</item>
    </style>
