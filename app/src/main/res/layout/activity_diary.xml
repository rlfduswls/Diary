<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true"
        android:background="#FFFFFF">


        <Button
            android:id="@+id/okbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="1dp"
            android:background="#00000000"
            android:gravity="right|center"
            android:text="확인"
            android:textColor="#A4BDF1"
            android:textSize="35px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/leftwt"
            android:layout_width="29.29dp"
            android:layout_height="23.43dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="111.55dp"
            android:background="@drawable/baseline_arrow_left_24"
            android:drawableRight="?attr/selectableItemBackground" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/circle"
            />

        <Button
            android:id="@+id/rightwt"
            android:layout_width="29.29dp"
            android:layout_height="23.43dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="111.55dp"
            android:background="@drawable/baseline_arrow_right_24"
            android:drawableRight="?attr/selectableItemBackground"

            />

        <ImageView
            android:id="@+id/wt_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="101dp"
            android:src="@drawable/sun"
            />

        <EditText
            android:id="@+id/memo_editText"
            android:layout_width="320dp"
            android:layout_height="310dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/border"
            android:gravity="top"
            android:hint=" 오늘의 내용을 적어보세요."
            android:textSize="35px" />

        <EditText
            android:id="@+id/title_editText"
            android:layout_width="320dp"
            android:layout_height="28.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/border"
            android:hint=" 하루의 제목을 적어보세요."
            android:textSize="35px" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="232dp"
            android:gravity="center"
            android:text="오늘의 내용"
            android:textColor="#B2C5EA"
            android:textSize="35px" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/date"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date"
            android:layout_width="70dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:text=""
            android:textColor="#91AFEC"
            android:textSize="35px" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="91.11dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-14dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="153.37dp"
            android:gravity="center"
            android:text="오늘의 제목"
            android:textColor="#B2C5EA"
            android:textSize="35px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="592dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="600dp"
            android:background="#00000000"
            android:text="로그아웃"
            android:gravity="left"
            android:textSize="35px"
            android:textColor="#A4BDF1"
            />

        <Button
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="145dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="600dp"
            android:background="#00000000"
            android:text="메인"
            android:gravity="left"
            android:textSize="35px"
            android:textColor="#A4BDF1"
            />

        <Button
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="600dp"
            android:background="#00000000"
            android:text="나의 기록"
            android:gravity="right"
            android:textSize="35px"
            android:textColor="#A4BDF1"
            />

        <Button
            android:id="@+id/upload"
            android:layout_width="69dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="68dp"
            android:text="사진업로드" />

        <LinearLayout
            android:id="@+id/page"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 업로드" />
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>

